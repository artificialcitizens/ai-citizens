{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ai-citizen/*": ["../*"],
      "@ai-citizen/utils": ["../utils"]
    },
    "declaration": true,
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "typeRoots": ["node_modules/@types", "node_modules/@ai-citizen/types"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"]
}
